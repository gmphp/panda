<% throw_content(:head) do %>
<script type="text/javascript" charset="utf-8">
$(document).ready(function() {
  jQuery.nginxUploadProgress({uuid: "<%= @progress_id %>"}); // Everything happens in jquery.nginxUploadProgress.js
});
</script>
<% end %>

<div id="pandaloader">
    <div id="error"></div>
    
	<div id="uploader">
		<form id="upload" enctype="multipart/form-data" action="/videos/upload?X-Progress-ID=<%= @progress_id %>&amp;<%= params.except('controller', 'action', 'format').to_query %>" method="post">
			<input name="file" type="file" />
      <!-- for jquery.form to pick up and create the uploader iframe -->
			<input name="iframe" type="hidden" value="true" />
			<input type="submit" value="Upload" />
		</form>
	</div>

	<div id="uploading" style="display:none;">
		<div id="progress" class="bar">
			<div id="progressbar">&nbsp;</div>
		</div>
		<div id="eta"></div>
	</div>
</div>
